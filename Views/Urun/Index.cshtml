@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Urun>
@{
    ViewBag.Title = "Ürünler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="display-4">
            @ViewBag.Title
        </div>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover table-striped dt-responsive nowrap" id="tbl">
            <thead>
                <tr class="text-center">
                    <th>ID</th>
                    <th>Ürün Adı</th>
                    <th>Marka</th>
                    <th>Stok</th>
                    <th>Alış Fiyatı</th>
                    <th>Satış Fiyatı</th>
                    <th>Kategori</th>
                    <th>Ürün Görsel</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.UrunId</td>
                        <td>@item.UrunAd</td>
                        <td>@item.Marka</td>
                        <td>@item.Stok</td>
                        <td>@item.AlisFiyat</td>
                        <td>@item.SatisFiyat</td>
                        <td>@item.Kategori.KategoriAd</td>
                        <td>@item.UrunGorsel</td>
                        <td><a href="/Urun/UrunSil/@item.UrunId" class="btn btn-outline-danger" title="Sil"><i class="fa fa-trash mr-2"></i> Sil</a></td>
                        <td><a href="/Urun/UrunGuncelle/@item.UrunId" class="btn btn-outline-warning" title="Güncelle"><i class="fa fa-edit mr-2"></i> Güncelle</a></td>
                    </tr>
                }
            </tbody>

        </table>
        <a href="/Urun/YeniUrun" class="btn btn-outline-primary" title="Yeni Ürün Ekle"> <i class="fa fa-plus mr-2"></i> Yeni Ürün Ekle</a>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/customDatatable.js"></script>
