@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Personeller";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="display-4">
            @ViewBag.Title
        </div>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover table-striped dt-responsive nowrap" id="tbl">
            <thead>
                <tr class="text-center">
                    <th>ID</th>
                    <th>Personel Adı</th>
                    <th>Personel Soyad</th>
                    <th>Personel Görsel</th>
                    <th>Departman</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                    <th>Satışlar</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.PersonelId</td>
                        <td>@item.PersonelAd</td>
                        <td>@item.PersonelSoyad</td>
                        <td>@item.PersonelGorsel</td>
                        <td>@item.Departman.DepartmanAd</td>
                        <td><a href="/Personel/PersonelSil/@item.PersonelId" class="btn btn-outline-danger" title="Sil"><i class="fa fa-trash mr-2"></i> Sil</a></td>
                        <td><a href="/Personel/PersonelGuncelle/@item.PersonelId" class="btn btn-outline-warning" title="Güncelle"><i class="fa fa-edit mr-2"></i> Güncelle</a></td>
                        <td><a href="/Departman/DepartmanPersonelSatis/@item.PersonelId" class="btn btn-outline-info" title="Satış Geçmişi"><i class="fa fa-search mr-2"></i> Satış Geçmişi</a></td>
                    </tr>
                }
            </tbody>

        </table>
        <a href="/Personel/PersonelEkle" class="btn btn-outline-primary" title="Yeni Personel Ekle"> <i class="fa fa-plus mr-2"></i>Yeni Personel Ekle</a>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/customDatatable.js"></script>
