@model List<MvcOnlineTicariOtomasyon.Models.Siniflar.SatisHareket>
@{
    ViewBag.Title = "Personel Satış Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="display-4">
            @ViewBag.Title
        </div>
    </div>
</div>

<ol class="breadcrumb mt-3">
    <li class="breadcrumb-item active">Personel : <strong>@ViewBag.Personel</strong></li>
</ol>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover table-striped dt-responsive nowrap" id="tbl">
            <thead>
                <tr class="text-center">
                    <th>Satış ID</th>
                    <th>Ürün</th>
                    <th>Cari</th>
                    <th>Fİyat</th>
                    <th>Adet</th>
                    <th>Toplam Tutar</th>
                    <th>Tarih</th>
                    <th>Yazdır</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.SatisId</td>
                        <td>@item.Urun.UrunAd</td>
                        <td>@item.Cariler.CariAd&nbsp;@item.Cariler.CariSoyad</td>
                        <td>@item.Fiyat</td>
                        <td>@item.Adet</td>
                        <td>@item.ToplamTutar</td>
                        <td>@Convert.ToDateTime(item.Tarih).ToString("dd/MM/yyyy hh:mm:ss")</td>
                        <td><a href="/Departman/DepartmanPersonelSatis/@item.PersonelId" class="btn btn-outline-primary" title="Yazdır"> <i class="fa fa-print mr-2"></i>Yazdır</a></td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
