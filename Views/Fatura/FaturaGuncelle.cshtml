@model MvcOnlineTicariOtomasyon.Models.Siniflar.Faturalar
@{
    ViewBag.Title = "Fatura Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="display-4">
            @ViewBag.Title
        </div>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("FaturaGuncelle", "Fatura", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false)
            @Html.HiddenFor(model => model.FaturaId)
            @Html.LabelFor(x => x.FaturaSeriNo)
            @Html.TextBoxFor(x => x.FaturaSeriNo, new { @class = "form-control" }) <br />
            @Html.LabelFor(x => x.FaturaSiraNo)
            @Html.TextBoxFor(x => x.FaturaSiraNo, new { @class = "form-control" }) <br />
            @Html.LabelFor(x => x.VergiDairesi)
            @Html.TextBoxFor(x => x.VergiDairesi, new { @class = "form-control" }) <br />
            @*@Html.LabelFor(x => x.FaturaTarihi)
            @Html.DropDownListFor(x => x.FaturaTarihi, (List<SelectListItem>)ViewBag.Departmanlar, "Departman seçiniz...", new { @class = "form-control dropdown" }) <br />*@
            @Html.LabelFor(x => x.FaturaTarihi)
            @Html.TextBoxFor(x => x.FaturaTarihi, new { @class = "form-control" }) <br />
            @Html.LabelFor(x => x.Saat)
            @Html.TextBoxFor(x => x.Saat, new { @class = "form-control" }) <br />
            @*@Html.LabelFor(x => x.ToplamTutar)
            @Html.TextBoxFor(x => x.ToplamTutar, new { @class = "form-control" }) <br />*@
            @Html.LabelFor(x => x.TeslimEden)
            @Html.TextBoxFor(x => x.TeslimEden, new { @class = "form-control" }) <br />
            @Html.LabelFor(x => x.TeslimAlan)
            @Html.TextBoxFor(x => x.TeslimAlan, new { @class = "form-control" }) <br />
            <button class="btn btn-outline-success" title="Güncelle"><i class="fa fa-edit mr-2"></i>Güncelle</button>
            <a href="/Fatura/Index" class="btn btn-outline-danger" title="İptal"><i class="fa fa-angle-double-left mr-2"></i>İptal</a>
        }

    </div>
</div>