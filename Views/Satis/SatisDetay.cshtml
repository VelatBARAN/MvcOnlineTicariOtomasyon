@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Satış Detay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="display-4">
            @ViewBag.Title
        </div>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered" id="tbl">
            <tr class="text-center">
                <th>Satış ID</th>
                <th>Ürün</th>
                <th>Cari</th>
                <th>Personel</th>
                <th>Fiyat</th>
                <th>Adet</th>
                <th>Toplam Tutar</th>
                <th>Tarih</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@item.SatisId</td>
                    <td>@item.Urun.UrunAd</td>
                    <td>@item.Cariler.CariAd&nbsp;@item.Cariler.CariSoyad</td>
                    <td>@item.Personel.PersonelAd&nbsp;@item.Personel.PersonelSoyad</td>
                    <td>@item.Fiyat</td>
                    <td>@item.Adet</td>
                    <td>@item.ToplamTutar</td>
                    <td>@Convert.ToDateTime(item.Tarih).ToString("dd/MM/yyyy hh:mm:ss")</td>
                </tr>
            }
        </table>
    </div>
</div>
