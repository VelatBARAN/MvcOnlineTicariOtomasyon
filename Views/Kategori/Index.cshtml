@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Kategori>

@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="display-4">
            @ViewBag.Title
        </div>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover table-striped dt-responsive nowrap" id="tbl">
            <thead>
                <tr class="text-center">
                    <th>ID</th>
                    <th>Kategori Adı</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.KategoriId</td>
                        <td>@item.KategoriAd</td>
                        <td><a href="/Kategori/KategoriSil/@item.KategoriId" class="btn btn-outline-danger" title="Sil"><i class="fa fa-trash mr-2"></i> Sil</a></td>
                        <td><a href="/Kategori/KategoriGuncelle/@item.KategoriId" class="btn btn-outline-warning" title="Güncelle"><i class="fa fa-edit mr-2"></i> Güncelle</a></td>
                    </tr>
                }
            </tbody>

        </table>
        <a href="/Kategori/KategoriEkle" class="btn btn-outline-primary" title="Yeni Kategori Ekle"> <i class="fa fa-plus mr-2"></i> Yeni Kategori Ekle</a>
    </div>
</div>

