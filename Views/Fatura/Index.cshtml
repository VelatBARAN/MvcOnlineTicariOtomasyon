@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Faturalar>
@{
    ViewBag.Title = "Faturalar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="display-4">
            @ViewBag.Title
        </div>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover table-striped dt-responsive nowrap" id="tbl">
            <thead>
                <tr class="text-center">
                    <th>ID</th>
                    <th>Seri No</th>
                    <th>Sıra No</th>
                    <th>Vergi Dairesi</th>
                    <th>Tarih</th>
                    <th>Saat</th>
                    <th>Teslim Eden</th>
                    <th>Teslim Alan</th>
                    <th>Toplam Tutar (TL)</th>
                    <th>Teslim Detayları</th>
                    <th>Güncelleme</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.FaturaId</td>
                        <td>@item.FaturaSeriNo</td>
                        <td>@item.FaturaSiraNo</td>
                        <td>@item.VergiDairesi</td>
                        <td>@Convert.ToDateTime(item.FaturaTarihi).ToString("dd/mm/yyyy hh:mm:ss")</td>
                        <td>@item.Saat</td>
                        <td>@item.TeslimEden</td>
                        <td>@item.TeslimAlan</td>
                        <td>@item.ToplamTutar</td>
                        <td><a href="/Fatura/FaturaGuncelle/@item.FaturaId" class="btn btn-outline-warning" title="Güncelle"><i class="fa fa-edit mr-2"></i>Güncelle</a></td>
                        <td><a href="/Fatura/FaturaDetay/@item.FaturaId" class="btn btn-outline-info" title="Detay"><i class="fa fa-search mr-2"></i>Detay</a></td>
                    </tr>
                }
            </tbody>

        </table>
        <a href="/Fatura/FaturaEkle" class="btn btn-outline-primary" title="Yeni Fatura Girişi"> <i class="fa fa-plus mr-2"></i>Yeni Fatura Girişi</a>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/customDatatable.js"></script>