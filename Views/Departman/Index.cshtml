@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Departman>
@{
    ViewBag.Title = "Departmanlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="display-4">
            @ViewBag.Title
        </div>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover table-striped dt-responsive nowrap" id="tbl">
            <thead>
                <tr class="text-center">
                    <th>ID</th>
                    <th>Departman Adı</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                    <th>Detay</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.DepartmanId</td>
                        <td>@item.DepartmanAd</td>
                        <td><a href="/Departman/DepartmanSil/@item.DepartmanId" class="btn btn-outline-danger" title="Sil"><i class="fa fa-trash mr-2"></i> Sil</a></td>
                        <td><a href="/Departman/DepartmanGuncelle/@item.DepartmanId" class="btn btn-outline-warning" title="Güncelle"><i class="fa fa-edit mr-2"></i> Güncelle</a></td>
                        <td><a href="/Departman/DepartmanDetay/@item.DepartmanId" class="btn btn-outline-info" title="Detay"><i class="fa fa-search mr-2"></i> Detay</a></td>
                    </tr>
                }
            </tbody>

        </table>
        <a href="/Departman/DepartmanEkle" class="btn btn-outline-primary" title="Yeni Departman Ekle"> <i class="fa fa-plus mr-2"></i> Yeni Departman Ekle</a>
    </div>
</div>
